<h3 class="center-text"><%= @heading %></h3>

<% if @imdb_link %>
    <h5 class="center-text"><a href="<%= @imdb_link %>" target="new">Profile on IMDB.com</a></h5>
<% end %>

<% if @repository_name %>
    <h5 class="center-text">Holding Repository: <a href="/repository/<%= @repository_id %>"><%= @repository_name %></a></h5>
<% end %>

<% if @repository_link %>
    <h5 class="center-text"><a href="<%= @repository_link %>" target="new">Repository Website</a></h5>
<% end %>

<% if @repository_location %>
    <p class="center-text"><%= @repository_location %></p>
<% end %>

<% if @description %>
    <p class="center-text"><%= @description %></p>
<% end %>

<% if @info %>
    <h5 class="center-text"><%= @info %></h5>
<% end %>

<% if @result %>
<table class="u-full-width">
  <tbody>
  <% @result.each do |row| %>
      <tr>
        <td colspan="4">
          <h4>
            <a href="/work/<%= row[:id] %>">
              <%= row[:title] %>
              <% if row[:secondary_title] %>
                  : <%= row[:secondary_title] %>
              <% end %>
            </a>
          </h4>
        </td>
      </tr>
      <tr>
        <th>Year</th>
        <th>Composer</th>
        <th>Director</th>
        <th>Country</th>
      </tr>
      <tr>
        <td><%= row[:year] %></td>
        <td><%= row[:composer] %></td>
        <td><%= row[:director] %></td>
        <td><%= row[:country] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% else %>
    <h3 class="center-text">No results</h3>
<% end %>
